rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Orders collection - open access for now (since not using Firebase Auth)
    match /orders/{orderId} {
      allow read: if true;  // Anyone can read orders (for tracking)
      allow create: if true;  // Anyone can create orders
      allow update: if true;  // Allow updates (admin uses sessionStorage auth)
      allow delete: if true;  // Allow deletes (admin uses sessionStorage auth)
    }
    
    // Notifications collection - open access
    match /notifications/{notificationId} {
      allow read: if true;  // Anyone can read their notifications
      allow create: if true;  // System can create notifications
      allow update: if true;  // Users can mark as read
      allow delete: if true;  // Users can delete notifications
    }
    
    // Conversations collection (for messaging) - open access
    match /conversations/{conversationId} {
      allow read, write: if true;  // Allow admin access
      
      // Messages subcollection
      match /messages/{messageId} {
        allow read, write: if true;  // Allow admin access
      }
    }
    
    // Users collection (if you add user profiles later)
    match /users/{userId} {
      allow read: if true;
      allow write: if true;
    }
    
    // Default deny all other collections
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
